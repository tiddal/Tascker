<% include ../partials/Header %> <% if(project.finishedAt === null){ %>

<h2 class="text-center title mt-5">Editar Projeto</h2>
<div class="row">
	<form
		action="/projects/<%= project.id %>?_method=PUT"
		method="POST"
		class="col-10 col-md-8 col-lg-6 mx-auto py-4 mb-5"
	>
		<div class="form-group">
			<label for="name">Nome</label>
			<input
				type="text"
				class="form-control"
				id="name"
				name="project[name]"
				value="<%= project.name %>"
				maxlength="50"
				required
			/>
		</div>

		<div class="form-group">
			<label for="description">Descrição</label>
			<input
				type="text"
				class="form-control"
				id="description"
				value="<%= project.description %>"
				name="project[description]"
				maxlength="100"
			/>
		</div>
		<hr />
		<div class="form-group">
			<label for="pin">PIN</label>
			<input
				type="password"
				class="form-control text-center"
				id="pin"
				aria-describedby="pinHelp"
				name="project[pin]"
				maxlength="10"
				required
			/>
			<small id="pinHelp" class="form-text text-muted"
				>Introduz o PIN do projeto para gravares as alterações.</small
			>
		</div>

		<button type="submit" class="btn btn-primary btn-block form-button">
			Gravar Alterações
		</button>
	</form>
</div>

<hr />

<h2 class="text-center title mt-5">Concluir Projeto</h2>
<div class="row">
	<form
		action="/projects/<%= project.id %>?_method=PATCH"
		method="POST"
		class="col-10 col-md-8 col-lg-6 mx-auto py-4 mb-5"
		id="finish"
	>
		<div class="form-group">
			<label for="pin">PIN</label>
			<input
				type="password"
				class="form-control text-center"
				id="pin"
				aria-describedby="pinHelp"
				name="project[pin]"
				maxlength="10"
				required
			/>
			<small id="pinHelp" class="form-text text-muted"
				>Introduz o PIN do projeto para confirmares a sua conclusão. Não vais
				puder adicionar ou remover mais tarefas. Tens que terminar todas as
				tarefas antes de concluir um projeto.</small
			>
		</div>

		<button type="submit" class="btn btn-primary btn-block form-button warning">
			Concluir Projeto
		</button>
	</form>
</div>

<hr />
<% }%>
<h2 class="text-center title mt-5">Apagar Projeto</h2>
<div class="row">
	<form
		action="/projects/<%= project.id %>?_method=DELETE"
		method="POST"
		class="col-10 col-md-8 col-lg-6 mx-auto py-5 mb-5"
		id="delete"
	>
		<div class="form-group">
			<label for="pin">PIN</label>
			<input
				type="password"
				class="form-control text-center"
				id="pin"
				aria-describedby="pinHelp"
				name="project[pin]"
				maxlength="10"
				required
			/>
			<small id="pinHelp" class="form-text text-muted"
				>Introduz o PIN do projeto para confiramares que queres apagar o teu
				projeto. Não vais conseguir recuperá-lo!</small
			>
		</div>

		<button type="submit" class="btn btn-primary btn-block form-button danger">
			Apagar Projeto
		</button>
	</form>
</div>

<% include ../partials/Footer %>
